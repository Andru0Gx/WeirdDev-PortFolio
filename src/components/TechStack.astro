---
import { StackList } from "@/consts/StackList";
---

<div
    class="grid grid-cols-3 grid-flow-row gap-5 h-15 p-5 sm:flex bg-bg rounded-2xl"
>
    {
        StackList.map((stack) => (
            <img
                src={`img/${stack.id}Logo.svg`}
                alt={stack.name}
                width="30"
                title={stack.name}
                class="hover:scale-110 transition-transform duration-300 ease-in-out"
            />
        ))
    }
</div>
