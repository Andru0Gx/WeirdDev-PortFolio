---
import { contacts } from "../consts/footer";
---

<footer class="px-10 py-10 xl:px-40">
    <script
        src="https://kit.fontawesome.com/1533ee2ebc.js"
        crossorigin="anonymous"></script>

    <div class="flex flex-col space-y-2">
        <h6 class="text-headline font-bold text-lg">Contacto</h6>
        {
            contacts.map(({ tag, info, svg }) => (
                <div>
                    <p>
                        <span class={`fa-solid fa-${svg}`} />
                        {tag}: {info}
                    </p>
                </div>
            ))
        }
    </div>
</footer>
